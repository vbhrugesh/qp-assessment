// Prisma schema file,

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  @@map(name: "users")
  id      Int      @default(autoincrement()) @id
  role RoleEnumType? @default(user)
  email   String   @unique
  name    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

enum RoleEnumType {
  user
  admin
}
